{
  "manifest_version": 3,
  "name": "SuperMind",
  "version": "1.0",
  "description": "Save and organize your favorite content with SuperMind",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "http://192.168.0.104:8000/*",
    "https://*.supabase.co/*",
    "https://crazymind-production.up.railway.app/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png", 
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
